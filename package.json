{
  "name": "t2cr-ui",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn build:relay:watch & NODE_OPTIONS='--inspect' next",
    "build:relay": "mkdirp subgraph/build && get-graphql-schema https://api.thegraph.com/subgraphs/name/kleros/t2cr > subgraph/build/full-schema.graphql && get-graphql-schema https://api.thegraph.com/subgraphs/name/kleros/t2cr --json > subgraph/build/full-schema.json && relay-compiler",
    "build:relay:watch": "yarn build:relay && relay-compiler --watch",
    "build": "yarn build:relay && next build && next export",
    "start": "next start",
    "release": "standard-version",
    "lint:eslint": "eslint --ext js .",
    "lint:eslint:fix": "eslint --ext js . --fix",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:fix": "yarn lint:eslint:fix && yarn lint:prettier:fix"
  },
  "dependencies": {
    "@popperjs/core": "^2.7.0",
    "@theme-ui/color": "^0.3.5",
    "@theme-ui/presets": "^0.3.5",
    "@theme-ui/typography": "^0.3.5",
    "@unilogin/provider": "^0.6.1",
    "@walletconnect/web3-provider": "^1.3.6",
    "authereum": "^0.1.0",
    "axios": "^0.21.1",
    "core-js": "2.6.9",
    "downshift": "^6.1.0",
    "formik": "^2.2.6",
    "humanize-duration": "^3.25.1",
    "iframe": "^1.0.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.startcase": "^4.4.0",
    "next-transpile-modules": "^6.0.0",
    "path-to-regexp": "^6.2.0",
    "pretty-num": "^0.5.0",
    "react-accessible-accordion": "^3.3.4",
    "react-burger-menu": "^3.0.3",
    "react-dropzone": "^11.3.1",
    "react-infinite-scroller": "^1.2.4",
    "react-jazzicon": "^0.1.3",
    "react-loading-skeleton": "^2.1.1",
    "react-merge-refs": "^1.1.0",
    "react-popper": "^2.2.4",
    "react-relay-network-modern": "^4.7.4",
    "react-ripples": "^2.2.1",
    "react-scroll-to": "^3.0.0-beta.6",
    "react-share": "^4.3.1",
    "react-spinners": "^0.10.6",
    "react-spring": "^8.0.27",
