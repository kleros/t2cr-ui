{
  "name": "t2cr-ui",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run build:relay:watch & NODE_OPTIONS='--inspect' next",
    "build:relay": "mkdirp subgraph/build && get-graphql-schema https://api.thegraph.com/subgraphs/name/kleros/t2cr > subgraph/build/full-schema.graphql && get-graphql-schema https://api.thegraph.com/subgraphs/name/kleros/t2cr --json > subgraph/build/full-schema.json && relay-compiler",
    "build:relay:watch": "npm run build:relay && relay-compiler --watch",
    "build": "npm run build:relay && next build && next export",
    "start": "next start",
    "release": "standard-version",
    "lint:eslint": "eslint --ext js .",
    "lint:eslint:fix": "eslint --ext js . --fix",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:prettier:fix"
  },
  "dependencies": {
    "@kleros/components": "^1.0.0-beta.1",
    "@kleros/icons": "^1.0.0-beta.1",
    "humanize-duration": "^3.25.1",
    "next-transpile-modules": "^6.0.0",
    "react-burger-menu": "^3.0.3",
    "react-infinite-scroller": "^1.2.4",
    "react-jazzicon": "^0.1.3",
    "react-scroll-to": "^3.0.0-beta.6",
    "use-debounce": "^5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-relay": "^10.1.2",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-regex": "^1.2.1",
    "eslint-plugin-unicorn": "^25.0.1",
    "get-graphql-schema": "^2.1.2",
    "graphql": "^15.4.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mkdirp": "^1.0.4",
    "next": "^10.0.5",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "relay-compiler": "^10.1.2",
    "relay-config": "^10.1.2",
    "standard-version": "^9.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    ".{js}": "npm run lint"
  },
  "volta": {
    "node": "12.20.1"
  },
  "license": "MIT"
}
